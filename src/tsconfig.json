{
  "compilerOptions": {
    "outDir": "../lib",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [ "es5", "es6", "dom" ],
    "target": "es6",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true
  }
}
